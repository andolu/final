<h3>
  <i class="far fa-calendar"></i>
  <%= @ride[:date] %>
</h3>
<h1>RSVP for <%= @ride[:title] %></h1>

<h3>Are you going?</h3>

<form action="/rides/<%= @ride[:id] %>/rsvps/create" class="mt-5">
  <div class="form-group">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="1">
      <label class="form-check-label">Yep</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="0">
      <label class="form-check-label">Nope</label>
    </div>
  </div>

  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit RSVP</button>
</form>