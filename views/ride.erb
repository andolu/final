<div class="row">
  <div class="col-sm-9">
    <h3>
      <i class="far fa-calendar"></i>
      <%= @ride[:date] %>
    </h3>
    <h1><%= @ride[:title] %></h1>
    <p><%= @ride[:description] %></p>
 
    <% for rsvp in @rsvps %>
       <% user = @users_table.where(:id => rsvp[:user_id]).to_a[0] %>
      <div class="media mt-3">
        <% if rsvp[:going] %>
          <i class="fas fa-thumbs-up fa-3x"></i>
        <% else %>
          <i class="fas fa-thumbs-down fa-3x"></i>
        <% end %>
        <div class="media-body ml-3">
          <h5 class="mt-0"><%= user[:name] %></h5>
          <%= rsvp[:comments] %>
        </div>
      </div>
    <% end %>
    <p class="mt-5"><a href="/rides/<%= @ride[:id] %>/rsvps/new" class="btn btn-primary">RSVP now!</a></p>
  </div>
  <div class="col-sm-3">
    <h3>When?</h3>
    <p><%= @ride[:date] %></p>
    <h3>Where?</h3>
    <p><%= @ride[:location] %></p>

    <iframe
  width="600"
  height="450"
  frameborder="0" 
  style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAwj92FmsL19r-c5jAuKrLNP0g35KgQCeg&q=<%= @lat_long %>&zoom=12" allowfullscreen>
</iframe>

    <h3>How many guests so far?</h3>
    <p><%= @count %></p>
  </div>
</div>

